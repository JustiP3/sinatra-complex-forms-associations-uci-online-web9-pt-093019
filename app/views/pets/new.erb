<h1>Create a new Pet</h1>

<form action="/pets" method="POST">
  <label>Pet Name:</label>
  <br>
  <input type="text" name="pet[name]" id="pet_name">
  <label>Existing Owners:</label>
  <% @owners.each do |owner| %>
    <input type="radio" id="<%=owner.id%>" value="<%=owner.id%>" name="pets[owner_id]"><%=owner.name%></input>
    <br>

  <% end %>

  <label>Create New Owner:</label>
  <p><input type="text" name="owner[name]" id="owner_name"></p>

  <input type="submit" value="Create Pet">
</form>
